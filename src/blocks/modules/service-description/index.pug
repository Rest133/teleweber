-
    const serviceDescriptionData = [
        {
            "imgSrc": "./images/icons/sprite.svg#s-descr1",
            "title": "Мониторинг репутации",
            "description": "Мониторьте чаты <br class='no-mb'>по отзывам, услугам <br>и продуктам вашей компании."
        }, {
            "imgSrc": "./images/icons/sprite.svg#s-descr2",
            "title": "Сбор целевой информации <br>по ключевым словам",
            "description": "Ищите совпадения по ключевым словам <br> в чатах Телеграм <br>и собирайте информацию в удобном виде."
        }, {
            "imgSrc": "./images/icons/sprite.svg#s-descr3",
            "title": "Удобная настройка <br>из личного кабинета",
            "description": "Управляйте настройкой ключевых слов,<br>аккаунтами и чатами <br> из личного кабинета пользователя. "
        }
    ]
    const serviceProfitsData = [
        {
            "imgSrc": "./images/icons/sprite.svg#s-descr4",
            "description": "Сокращение времени работы <br class='no-mb'>до 3 раз, благодаря собранным <br class='no-mb'>ключевым словам и чатам"
